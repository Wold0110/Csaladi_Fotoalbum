@using Csaladi_Fotoalbum.DatabaseModels;
@{
    ViewData["Title"] = "Albumok";
}
@model List<Album>

@if(Model.Count == 0){
    <h1>Nincs album felvíve</h1>
}
else{
    <ul>
    @foreach(Album a in Model)
    {
        <a asp-controller="Album" asp-action="@a.Id"><li>@a.Name</li></a>
    }
    </ul>
}

<a asp-controller="Album" asp-action="New">Új album létrehozása</a>