@using Csaladi_Fotoalbum.DatabaseModels;
@{
    ViewData["Title"] = "Helyszínek";
}
@model List<Location>
@if(Model.Count == 0){
    <h1>Nincs felvíve helyszín</h1>
}
else{
    foreach(Location l in Model)
    {
        <a asp-controller="Location" asp-action="@l.Id"><li>@l.Name</li></a>
    }
}
<br />
<a asp-controller="Location" asp-action="NewLocation">Új helyszín hozzáadása</a>